{
  // Prettier & eslint setup
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.autoClosingBrackets": "always",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "[typescript]": {
    "editor.autoClosingBrackets": "always"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.autoSave": "afterDelay",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "breadcrumbs.enabled": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.alwaysShowStatus": true,
  "prettier.disableLanguage": ["js"],
  "editor.minimap.enabled": false,

  // cursor
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "expand",

  // workbench
  "extensions.autoUpdate": true,
  "explorer.confirmDelete": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.productIconTheme": "bootstrap-product-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Andromeda Italic Bordered",
  "workbench.editor.enablePreview": false,

  // editor
  "editor.fontFamily": "Operator Mono",
  "editor.fontLigatures": true,
  "editor.dragAndDrop": false,
  "editor.fontSize": 20.5,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "none",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingQuotes": "always",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "liveServer.settings.donotVerifyTags": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "cSpell.userWords": [
    "Hassan",
    "Nahid",
    "a",
    "alamin",
    "align",
    "awesome",
    "baily",
    "base",
    "bfd",
    "browserslist",
    "chay",
    "compat",
    "components",
    "craco",
    "d",
    "ded",
    "ea",
    "ekhn",
    "ema",
    "evenify",
    "f",
    "family",
    "flexbox",
    "font",
    "fontawesome",
    "fortawesome",
    "ghatail",
    "ghurte",
    "humburger",
    "icon",
    "john",
    "marginheight",
    "marginwidth",
    "miya",
    "ms",
    "nahidhassanbulbul",
    "name",
    "nayok",
    "nayoks",
    "niya",
    "nums",
    "openweathermap",
    "photoshop",
    "prac",
    "preconnect",
    "ronaldo",
    "sakhipur",
    "saown",
    "start",
    "tailwind",
    "tailwindcss",
    "tangail",
    "tumake",
    "utilities"
  ],
  "git.confirmSync": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  //   emmet & tab nine suggesttion
  "emmet.excludeLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.showSuggestionsAsSnippets": true,
  "tabnine.experimentalAutoImports": true,
  "terminal.integrated.tabs.enabled": true,

  //   terminal setting
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    },
    "Ubuntu (WSL) ": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    },
    "Ubuntu (WSL)  ": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    },
    "C:\\\\Windows\\\\System32\\\\wsl.exe (migrated)": {
      "path": "C:\\\\Windows\\\\System32\\\\wsl.exe",
      "args": []
    }
  },
  "terminal.integrated.defaultProfile.osx": "",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\wsl.exe",
  "vsicons.dontShowNewVersionMessage": true,
  "terminal.integrated.automationShell.linux": "",
  "emmet.preferences": {},
  // live sass compiler settings
  // "liveSassCompile.settings.formats": [
  //   {
  //     "extensionName": ".css",
  //     "savePath": "/css",
  //     "format": "compressed"
  //   }
  // ],
  // "liveSassCompile.settings.generateMap": false,

  // terminal editor style
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorSmoothCaretAnimation": true,
  "terminal.integrated.cursorWidth": 4,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.rightClickBehavior": "paste"
}
